
<form id="formCadastro" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
            </div>
        </div>
        
    </div>
    <div class="row">
        
        <div class="col-md-12">
            <div class="form-group">
                <label for="NomeCidade">Cidade:</label>
                <input required="required" type="text" class="form-control" id="NomeCidade" name="NomeCidade" maxlength="50" placeholder="Ex.: São Paulo">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Nota">Nota:</label>
                <input required="required" type="text" class="form-control" id="Nota" name="Nota" placeholder="Ex.:7,5" maxlength="5">
            </div>
        </div>
    </div>

    <div class="row">
       
    </div>

    <div class="row">
        <div class="col-sm-4">
            <div class="pull-left">
                <!-- Button trigger modal -->
                @*<button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal">
                    Beneficiários
                    <br />
                </button>*@
                <!-- Modal -->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <br />

            <table id="gridBeneficiarios" class="table"></table>
        </div>
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                @Html.ActionLink("Voltar", "Index", "Aplicante", new { }, new { @class = "btn btn-sm btn-danger" })
            </div>
        </div>
    </div>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Beneficiários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="formModal" method="post">
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="CPFBeneficiario">CPF do Beneficiário:</label>
                                <input required="required" type="number" class="form-control" id="CPFBeneficiario" name="CPFBeneficiario" placeholder="Ex.: 000.000.000-00" maxlength="14">
                            </div>
                        </div>
                        <div class="col-sm-5">

                            <div class="form-group">
                                <label for="NomeBeneficiario">Nome do Beneficiário:</label>
                                <input required="required" type="text" class="form-control" id="NomeBeneficiario" name="NomeBeneficiario" placeholder="Ex.: João" maxlength="50">
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <br />
                                <button type="submit" class="btn btn-sm btn-success" id="botaoIncluir">Incluir</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="CPF">CPF do Cliente:</label>
                                <input required="required" type="number" class="form-control" id="CPF" name="CPF" placeholder="Ex.: 000.000.000-00" maxlength="14">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="pull-right">
                                <br />
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

